@model QuizApp.Models.Quiz

@{
    ViewData["Title"] = "Edit Quiz";
}

<h2>Edit Quiz</h2>

<div id="quiz-edit-app">
    <form asp-action="Edit" method="post" class="mt-3">
        @Html.AntiForgeryToken()

        <!-- Hidden ID field-->
        <input type="hidden" asp-for="QuizId" />

        <!-- Quiz title -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title"
                   class="form-control"
                   v-model="title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Quiz description -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description"
                      class="form-control"
                      v-model="description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const { createApp } = Vue;

        createApp({
            data() {
                return {
                    // Initialize Vue with values coming from the server Model
                    title: '@(Model?.Title?.Replace("'", "\\'") ?? "")',
                    description: '@(Model?.Description?.Replace("'", "\\'") ?? "")'
                };
            }
        }).mount("#quiz-edit-app");

        // client-side error logger
        window.addEventListener("error", function (event) {
            console.error("Client error on Edit Quiz page:", event.error || event.message);
            alert("Something went wrong. Please try again.");
        });
    </script>
}
